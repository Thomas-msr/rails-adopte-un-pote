<div class="container">
  <h2>Profil de <%= current_user.first_name %></h2>

  <br>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      <%= f.input :first_name, label: "Prénom", required: true, autofocus: true %>

      <%= f.input :last_name, label: "Nom", required: true, autofocus: true %>

      <%= f.input :city, label: "Ville", required: true, autofocus: true %>

      <%= f.input :age, label: "Age", required: true, autofocus: true %>

      <%= f.input :avatar_url, label: "URL de ta photo", required: true, autofocus: true %>

      <%= f.input :email, required: true, autofocus: true %>

      <%= f.input :init_tags, label: "Tes kiffs", required: true, collection: Tag.all, input_html: { multiple: true, class: 'multiple-select' }, include_hidden: false %>

      <%= f.input :description, label: "Description", required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  label: "Mot de passe",
                  hint: "A laisser blanc si tu ne souhaites pas le modifier",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: "Confirmation du mot de passe",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  label: "Mot de passe actuel",
                  hint: "Ton mot de passe actuel est nécessaire pour valider les modifications",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :tags, collection: Tag.all, input_html: { multiple: true, class: 'multiple-select' }, include_hidden: false %>
    </div>

    <div class="form-actions" style="background-color:#f6bd60; color:white; width:120px; text-align:center; margin: 0 auto">
      <%= f.button :submit, "Mettre à jour" %>
    </div>
  <% end %>

  <br>

  <h3>Supprimer mon compte</h3>

  <p>L'appli ne te plaît pas ? <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Es-tu sûr?" }, method: :delete %></p>

  <br>

  <%= link_to "Retour", :back %>

  <br>
  <br>
</div>
