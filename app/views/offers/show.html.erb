<div class="wrapper-header">
  <h5> <%= link_to "< Retour aux résultats", offers_path %> </h5>
</div>

<div class="wrapper">
  <img class="avatar-large-bordered" src="<%= @offer.user.avatar_url %>" alt="user avatar">
  <div class="wrapper-profile-content">
    <h2> <%= @offer.user.first_name %> <i class="far fa-heart"></i> </h2>
    <p> <iplass="fas fa-map-marker-alt"></i> Localisé(e) à <%= @offer.user.city %> </p>
    <h4> <em> "<%= @offer.title %>"</em> </h4>
    <div class="taglist">
      <% @offer.user.tags.each do |tag| %>
        <div class="tag"> <%= tag.name %> </div>
      <% end %>
    </div>
  </div>
</div>

<div class="wrapper-description">

</div>

<div class="wrapper-availabilities">

</div>
